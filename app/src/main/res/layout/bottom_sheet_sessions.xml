<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_sessions_layout"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@drawable/bottom_sheet_background"
    app:behavior_hideable="true"
    app:behavior_peekHeight="32dp"
    app:layout_behavior="org.mozilla.focus.widget.ScrollPeekBottomSheetBehavior"
    android:clipChildren="false"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/handle_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:paddingTop="13dp"
        android:paddingBottom="14dp"
        android:background="@drawable/handle_background_bottom_sheet"
        android:src="@drawable/handle_bottom_sheet"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Tabs handle" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_tabs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/handle_bottom_sheet"
        tools:layoutManager="GridLayoutManager"
        tools:listItem="@layout/item_tab"
        tools:spanCount="3" />

    <org.mozilla.focus.widget.FloatingAddTabButton
        android:id="@+id/fab_add_tab_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp"
        android:src="@drawable/plus_to_arrow"
        android:backgroundTint="@color/colorErase"
        app:rippleColor="@color/colorErasePressed"
        android:visibility="gone"
        app:fabSize="normal"
        app:layout_behavior="org.mozilla.focus.widget.FloatingActionButtonBehavior"
        android:contentDescription="Add new tab"
        app:layout_dodgeInsetEdges="bottom"/>

</android.support.constraint.ConstraintLayout>